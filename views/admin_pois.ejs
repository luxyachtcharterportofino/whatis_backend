// Helper functions for EJS template
function getCategoryColor(category) {
  const colors = {
    'church': 'primary',
    'museum': 'info', 
    'monument': 'warning',
    'beach': 'success',
    'restaurant': 'danger',
    'hotel': 'secondary',
    'other': 'dark'
  };
  return colors[category] || 'dark';
}

function getCategoryIcon(category) {
  const icons = {
    'church': '‚õ™',
    'museum': 'üèõÔ∏è',
    'monument': 'üèõÔ∏è',
    'beach': 'üèñÔ∏è',
    'restaurant': 'üçΩÔ∏è',
    'hotel': 'üè®',
    'other': 'üìç'
  };
  return icons[category] || 'üìç';
}

function getCategoryText(category) {
  const texts = {
    'church': 'Chiesa',
    'museum': 'Museo',
    'monument': 'Monumento',
    'beach': 'Spiaggia',
    'restaurant': 'Ristorante',
    'hotel': 'Hotel',
    'other': 'Altro'
  };
  return texts[category] || 'Altro';
}

function getSourceColor(source) {
  const colors = {
    'manual': 'secondary',
    'ai': 'success',
    'osm': 'info',
    'wikipedia': 'warning',
    'internet': 'primary'
  };
  return colors[source] || 'secondary';
}

function getSourceIcon(source) {
  const icons = {
    'manual': '‚úã',
    'ai': 'üß†',
    'osm': 'üó∫Ô∏è',
    'wikipedia': 'üìö',
    'internet': 'üåê'
  };
  return icons[source] || '‚ùì';
}

function getSourceText(source) {
  const texts = {
    'manual': 'Manuale',
    'ai': 'AI',
    'osm': 'OSM',
    'wikipedia': 'Wikipedia',
    'internet': 'Internet'
  };
  return texts[source] || 'Sconosciuto';
}

function getLicenseStatusColor(licenseStatus) {
  if (!licenseStatus || !licenseStatus.status) return 'secondary';
  const status = licenseStatus.status;
  const colors = {
    'free': 'success',
    'needs_attribution': 'warning',
    'needs_replacement': 'danger',
    'unknown': 'info',
    'not_checked': 'secondary'
  };
  return colors[status] || 'secondary';
}

function getLicenseStatusIcon(licenseStatus) {
  if (!licenseStatus || !licenseStatus.status) return '‚ùì';
  const status = licenseStatus.status;
  const icons = {
    'free': '‚úÖ',
    'needs_attribution': '‚ö†Ô∏è',
    'needs_replacement': 'üö´',
    'unknown': '‚ùì',
    'not_checked': '‚è≥'
  };
  return icons[status] || '‚ùì';
}

function getLicenseStatusText(licenseStatus) {
  if (!licenseStatus || !licenseStatus.status) return 'Non verificata';
  const status = licenseStatus.status;
  const texts = {
    'free': 'Libera',
    'needs_attribution': 'Richiede attribuzione',
    'needs_replacement': 'Da sostituire',
    'unknown': 'Sconosciuta',
    'not_checked': 'Non verificata'
  };
  return texts[status] || 'Non verificata';
}

function getLicenseStatusTooltip(licenseStatus) {
  if (!licenseStatus || !licenseStatus.status) return 'Licenza non verificata';
  
  const status = licenseStatus.status;
  let tooltip = getLicenseStatusText(licenseStatus);
  
  if (licenseStatus.source) {
    tooltip += ` - Fonte: ${licenseStatus.source}`;
  }
  if (licenseStatus.author) {
    tooltip += ` - Autore: ${licenseStatus.author}`;
  }
  if (licenseStatus.license) {
    tooltip += ` - Licenza: ${licenseStatus.license}`;
  }
  if (licenseStatus.notes) {
    tooltip += ` - ${licenseStatus.notes}`;
  }
  if (licenseStatus.checkedAt) {
    const checkedDate = new Date(licenseStatus.checkedAt);
    tooltip += ` (Verificata: ${checkedDate.toLocaleDateString('it-IT')})`;
  }
  
  return tooltip;
}

function getBestDescriptionText(poi) {
  if (poi.extraInfo && poi.extraInfo.aiSummary) {
    return poi.extraInfo.aiSummary;
  }
  return poi.description || 'Nessuna descrizione disponibile';
}

function truncateText(text, maxLength) {
  if (!text) return '';
  if (text.length <= maxLength) return text;
  return text.substring(0, maxLength) + '...';
}
