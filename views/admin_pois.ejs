  <script>
    function showDiscoveryModal() {
      const modal = new bootstrap.Modal(document.getElementById('discoveryModal'));
      modal.show();
    }

    async function startDiscovery() {
      const zoneId = document.getElementById('discovery-zone').value;
      const municipality = document.getElementById('discovery-municipality').value || null;
      const type = document.getElementById('discovery-type').value;

      if (!zoneId) {
        alert('Seleziona una zona');
        return;
      }

      const modal = bootstrap.Modal.getInstance(document.getElementById('discoveryModal'));
      modal.hide();

      // Mostra loading
      const loadingAlert = document.createElement('div');
      loadingAlert.className = 'alert alert-info';
      loadingAlert.innerHTML = 'üîç Scoperta POI in corso... Attendere...';
      document.querySelector('.container').prepend(loadingAlert);

      try {
        const response = await fetch('/admin/pois/discover', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ zone_id: zoneId, municipality, type })
        });

        const result = await response.json();
        loadingAlert.remove();

        if (result.success) {
          alert(`‚úÖ Scoperta completata!\n\n` +
                `Terrestri: ${result.results.saved.terrestrial} salvati, ${result.results.duplicates.terrestrial} duplicati\n` +
                `Marini: ${result.results.saved.marine} salvati, ${result.results.duplicates.marine} duplicati\n\n` +
                `Vai alla pagina "POI Proposti" per revisionarli.`);
          window.location.href = `/admin/pois/proposed?zone_id=${zoneId}`;
        } else {
          alert('‚ùå Errore: ' + result.error);
        }
      } catch (error) {
        loadingAlert.remove();
        alert('‚ùå Errore: ' + error.message);
      }
    }

